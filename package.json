{
  "name": "email-receipt-reader",
  "version": "1.0.0",
  "description": "A system to read email receipts, parse PDFs, and manage ledger entries",
  "main": "server/index.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "mailparser": "^3.7.4",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "pdf-parse": "^1.1.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "receipt",
    "pdf",
    "ledger",
    "banking",
    "email"
  ],
  "author": "Your Name",
  "license": "MIT"
}
