{
  "version": 2,
  "functions": {
    "server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node@3.0.0"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1"
    }
  ]
} 